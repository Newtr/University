SELECT 
    Отдел,
    EXTRACT(MONTH FROM Дата_собеседования) AS Месяц,
    COUNT(*) AS Количество_собеседований
FROM 
    Собеседования
INNER JOIN 
    Сотрудники ON Собеседования.Сотрудник_принимавший_собеседование = Сотрудники.ФИО_Сотрудника
WHERE 
    Дата_собеседования >= ADD_MONTHS(SYSDATE, -6)
GROUP BY 
    Отдел,
    EXTRACT(MONTH FROM Дата_собеседования);
