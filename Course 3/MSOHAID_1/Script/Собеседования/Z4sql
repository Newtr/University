-- Создание объектного представления
CREATE OR REPLACE VIEW Собеседования_view AS
SELECT * FROM Собеседования_Obj;

-- Использование объектного представления в запросе
SELECT v.ИМЯ_КАНДИДАТА, v.РЕЗУЛЬТАТ_СОБЕСЕДОВАНИЯ
FROM Собеседования_view v
WHERE v.РЕЗУЛЬТАТ_СОБЕСЕДОВАНИЯ IN ('Прошел', 'Прошла');
