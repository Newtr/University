SELECT TABLESPACE_NAME
FROM DBA_TABLESPACES;

SELECT SEGMENT_NAME, SEGMENT_TYPE
FROM DBA_SEGMENTS
WHERE TABLESPACE_NAME = 'SYSTEM';
--22.	Выведите список всех объектов, доступных пользователю. 
SELECT OWNER, OBJECT_NAME, OBJECT_TYPE
FROM DBA_OBJECTS
WHERE OWNER = 'SYS';
--23.	Вычислите количество блоков, занятых таблицей.
SELECT BLOCKS
FROM DBA_TABLES
WHERE TABLE_NAME = 'T1';
--24.	Выведите список текущих сессий. 
SELECT SID, SERIAL#, USERNAME, STATUS
