--25.	Выведите, производится ли архивирование журналов повтора.
SELECT DEST_ID, DEST_NAME, STATUS, ARCHIVED_THREAD#, APPLIED_THREAD#
FROM V$ARCHIVE_DEST_STATUS;

SELECT log_mode
FROM v$database;

--26.	Создайте представление с определенными параметрами.
CREATE OR REPLACE VIEW Test_View (office)
AS
SELECT o.office
FROM offices o
JOIN salesreps s ON o.office = s.rep_office;

SELECT *
FROM Test_View
WHERE office = 12;

--27.	Создайте database link с определенными параметрами.
CREATE DATABASE LINK my_link
   CONNECT TO remote_user
   IDENTIFIED BY remote_password
   USING 'remote_service_name';


















    


